<!DOCTYPE html>
<html>
  <head>
    <title>Booking</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
    <% if user_signed_in? %>
      <%= image_tag current_user.avatar.variant(resize: "50x50") if current_user.avatar.attached? %>
      <%= link_to current_user.name, edit_user_registration_path  %>
      <%= link_to '施設一覧', rooms_path, class: 'btn-primary' %>
      <%= link_to '新しい施設を登録する', new_room_path, class: 'btn-primary' %>
      <%= link_to 'ログアウト', destroy_user_session_path, method: :get %>
    <% else %>
      <%= link_to 'ログイン', new_user_session_path %>
      <%= link_to '新規登録', new_user_registration_path %>
    <% end %>
  </header>
    <%= yield %>
  </body>
</html>
